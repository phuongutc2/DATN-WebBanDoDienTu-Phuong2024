@{ 
    var orderdetail = ViewBag.OrderDetail as List<ShoppingOnline.Models.DTO.Order_DetailDTO>;
    var order = ViewBag.Order as ShoppingOnline.Models.Entities.Order;
    int dem = 0;
    float sum = 0;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Hóa đơn của bạn | E-Shopper</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/main.css" rel="stylesheet">
   
</head>
<!--/head-->

<body>
    <div class="container text-center">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Trang thương mại điện tử E-Shopper</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-heading">
                            Hóa đơn bán hàng
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <div class="col-sm-12">
                                    <p class="text-left">Họ và tên: <span style="font-weight: bold;">@order.CustomerName</span></p>
                                    <p class="text-left">Số điện thoại: <span style="font-weight: bold;">@order.CustomerPhone</span></p>
                                    <p class="text-left">Địa chỉ: <span style="font-weight: bold;">@order.CustomerAddress</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="panel-heading">
                            Chi tiết hóa đơn
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr role="row">
                                            <th class="text-center" style="width: 20px; ">
                                                STT
                                            </th>
                                            <th class="text-center " style="width: 209px; ">
                                                Sản phẩm
                                            </th>
                                            <th class="text-center " style="width: 25px; ">
                                                Số lượng
                                            </th>
                                            <th class="text-center " style="width: 30px; ">
                                                Đơn giá
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in orderdetail)
                                        {
                                            dem++;
                                            <tr class="gradeA even " role="row ">
                                                <td class="text-center ">@dem</td>
                                                <td>@item.Product_Name</td>
                                                <td class="text-center ">@item.Quantity</td>
                                                <td class="text-center ">@item.Price.Value.ToString("N0")</td>
                                            </tr>
                                            sum += (float)item.Price;
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row ">
                <div class="col-md-7 ">
                </div>
                <div class="col-sm-5 " style="margin-bottom:10px ">
                    <div class="dataTables_info " >
                        Tổng tiền: <span style="color:red; font-weight:bold; font-size:25px ">@sum.ToString("N0")</span> vnđ
                    </div>
                </div>

            </div>
            <!-- /.row -->
        </div>
    </div>
</body>

</html>