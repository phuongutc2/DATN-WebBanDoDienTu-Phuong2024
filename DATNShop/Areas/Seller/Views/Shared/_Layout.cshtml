    var seller = Session["seller_login"] as ShoppingOnline.Models.Entities.User;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
