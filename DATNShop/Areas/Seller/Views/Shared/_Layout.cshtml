    <link href="~/Areas/Admin/Assets/css/PNotifyConfirm.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Areas/Admin/Assets/css/startmin.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/Areas/Admin/Assets/css/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
