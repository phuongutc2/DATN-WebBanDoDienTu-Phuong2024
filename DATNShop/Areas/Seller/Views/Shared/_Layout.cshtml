    <script src="~/Areas/Admin/Assets/c3/c3.js"></script>
    <script src="https://c3js.org/js/d3-5.8.2.min-c5268e33.js"></script>
    <script src="~/Areas/Admin/Assets/select2/select2.full.min.js"></script>
