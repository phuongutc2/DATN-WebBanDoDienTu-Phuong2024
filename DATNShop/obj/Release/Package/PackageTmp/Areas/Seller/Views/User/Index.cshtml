
@{
    ViewBag.Title = "Chăm sóc khách hàng";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
    int dem = 1;
}

@model PagedList.IPagedList<ShoppingOnline.Models.DTO.UserDTO>
@using PagedList.Mvc


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <h3 class="page-header">Chăm sóc khách hàng</h3>
            </div>
            <div class="col-md-8" style="margin-top: 40px;">
                <ol class="breadcrumb" style="text-align: right">
                    <li><a href="#"><i class="fa fa-address-book-o fa-fw"></i>Quản lý khách hàng</a></li>
                    <li class="active">Danh sách khách hàng</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            @if (TempData["add_success"] != null)
            {
                <div class="alert alert-success" id="AlertBox">
                    @TempData["add_success"]
                </div>
            }
        </div>
        @*<div class="row">
                <div class="col-md-4" style="margin-bottom: 10px">
                    <a href="/Admin/Product/Add" class="btn btn-lg btn-primary">Thêm mới sản phẩm</a>
                </div>
            </div>*@
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Khách hàng đã đặt mua sản phẩm
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="text-center">Thông tin khách hàng</th>
                                        <th class="text-center">Tổng số lượng</th>
                                        <th class="text-center">Số tiền đã mua (đ)</th>
                                        <th class="text-center">Ngày đặt hàng gần nhất</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@dem</td>
                                            <td>
                                                <p>Họ tên: <b>@item.Fullname</b></p>
                                                <p>SĐT: <b>@item.Phone</b>, Email: <b>@item.Email</b></p>
                                                <p>Địa chỉ: <b>@item.Address</b></p>
                                            </td>
                                            <td class="text-center price">@item.TotalQuantity</td>
                                            <td class="text-center price">@item.TotalMoney.Value.ToString("N0")</td>
                                            <td class="text-center">@item.LastDayBought.Value.ToString("dd-MM-yyyy")</td>
                                        </tr>
                                        dem++;
                                    }

                                </tbody>
                            </table>
                            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>

        </div>

    </div>
    <!-- /.container-fluid -->
</div>

@section jsSeller{

    <script type="text/javascript">
    </script>

}





