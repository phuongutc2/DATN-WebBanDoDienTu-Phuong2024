
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section id="form-login">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <div class="col-sm-12">
                            <h2 class="text-center">Đăng nhập E-Shopper</h2>
                        </div>

                        @using (Html.BeginForm("frmLogin", "User", FormMethod.Post))
                        {
                            <div class="col-sm-12">
                                @if (TempData["error"] != null)
                                {
                                    <h5 class="alert alert-danger text-center">
                                        @TempData["error"]
                                    </h5>
                                }
                                <input type="text" placeholder="Tài khoản" name="Account">
                                <input type="password" placeholder="Mật khẩu" name="Password">
                                <span>
                                    <a href="/User/Register"></a>
                                </span>
                            </div>
                            <div class="col-sm-3"></div>
                            <div class="col-sm-7">
                                <button type="submit" class="btn btn-default">Đăng nhập</button>
                            </div>

                        }
                        @*<div class="col-sm-2"></div>
                        <div class="col-sm-9" style="margin: 10px 60px;">
                            <div id="gSignInWrapper">
                                <span class="label">Đăng nhập bằng:</span>
                                <div id="customBtn" class="customGPlusSignIn">
                                    <span class="icon"></span>
                                    <span class="buttonText">Google</span>
                                </div>
                            </div>
                        </div>*@
                    </div>
                    <!--/login form-->
                </div>
            </div>
        </div>
    </section>

