@{ 
    var lstCategory =  ViewBag.lstCategory as List<ShoppingOnline.Models.Entities.Category>;
}
<div class="left-sidebar">
    <h2>Hãng laptop</h2>
    <div class="panel-group category-products" id="accordian">
        @foreach (var item in lstCategory.Where(x => x.Type == "Laptop"))
        {
            var url = "/" + item.Metatitle.Trim() + "-" + item.ID;
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a href="@url">@item.Name</a></h4>
                </div>
            </div>
        }

    </div><!--/category-products-->

</div>
<div class="left-sidebar">
    <h2>Hãng điện thoại</h2>
    <div class="panel-group category-products" id="accordian">
        @foreach (var item in lstCategory.Where(x => x.Type == "Điện thoại"))
        {
            var url = "/" + item.Metatitle.Trim() + "-" + item.ID;
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a href="@url">@item.Name</a></h4>
                </div>
            </div>
        }

    </div><!--/category-products-->
    <div class="shipping text-center">
        <!--shipping-->
        <img src="~/Assets/images/home/shipping.jpg" alt="" />
    </div>
    <!--/shipping-->
</div>